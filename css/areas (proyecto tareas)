  /* Area de un cirulo*/
var f= new formulas();
function formulas() {
  this.areaCirculo = function (radio) {
  return Math.PI * Math.pow(radio,2);
  }
}
console.log ("El area de un circulo de Radio= es" +f.areaCirculo(8));

/* Area de un triangulo */
var B= new formulas();
